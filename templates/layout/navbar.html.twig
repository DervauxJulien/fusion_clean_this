
{% extends 'base.html.twig' %}


{% block head %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    
{% endblock %}


{% block body %}
    <header id="navbar">
        <div id='nav_logo'>
            <a href="{{path('app_home')}}">
                <img src='/images/icons/logo.svg' alt='website logo' name='navbar_logo' id='home_customer_logo' />
            </a>
        </div>

        <h3>Take your time and rest for a bit, Clean This will take care of this shit !</h3>

        {% if app.user %}
            <a onclick="return confirm('Voulez-vous vous deconnecter ?')" href="{{path('app_logout')}}" class="btn btn-danger" id="nav_logout">Deconnexion</a>
            {% else %}
            
            <div></div>
            <div></div>
        {% endif %}
        
    </header>
{% endblock %}
