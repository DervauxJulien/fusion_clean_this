{% extends 'base.html.twig' %}

{% block title %}PdfController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Facture</title>
    <style>
        /* Styles CSS pour la mise en forme de la facture */
        body {
            font-family: Arial, sans-serif;
        }
        .invoice-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .invoice-details {
            margin-bottom: 20px;
        }
        .invoice-table {
            width: 100%;
            border-collapse: collapse;
        }
        .invoice-table th, .invoice-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .invoice-footer {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Contenu de la facture -->
    <table>
        <thead>
            <!-- En-têtes de tableau -->
        </thead>
        <tbody>
            <tr>
                <!-- Affichage des propriétés de chaque opération -->
                <td>{{ operation.id }}</td>
                <td>{{ operation.client.nom }}</td>
                <!-- Ajoutez d'autres colonnes selon vos besoins -->
                
            </tr>
        </tbody>
    </table>
</body>
</html>
{% endblock %}
