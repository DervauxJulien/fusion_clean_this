<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Facture CleanThis</title>
    <style>
        /* Styles CSS pour la mise en forme de la facture */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .invoice-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .invoice-details {
            margin-bottom: 20px;
        }
        .invoice-table {
            width: 100%;
            border-collapse: collapse;
        }
        .invoice-table th, .invoice-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .invoice-footer {
            margin-top: 20px;
            text-align: right;
        }
        .invoice-footer p {
            margin: 0;
        }
    </style>
</head>
<body>
    <!-- En-tête de la facture -->
    <div class="invoice-header">
        <h1>Facture CleanThis</h1>
    </div>

    <!-- Contenu de la facture -->
    <table class="invoice-table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Montant</th>
                <th>Type opération</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <!-- Affichage des propriétés de chaque opération -->
                <td>{{ operation.client.nom }}</td>
                <td>{{ operation.client.prenom }}</td>
                <td>{{ operation.tarif }} €</td>
                <td>{{ operation.type }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Pied de page de la facture -->
    <div class="invoice-footer">
        <p>Total à payer: {{ operation.tarif }} €</p>
    </div>
</body>
</html>
