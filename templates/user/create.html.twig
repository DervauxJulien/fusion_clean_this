{% extends "base.html.twig" %}
{% block title %}Creation utilisateur{% endblock %}

{% block body %}

{% include "layout/navbar.html.twig" %}
<a href="{{path('app_gestion_utilisateur')}}" ><button id="return">‚Üê</button></a>

<div id="createUser">
    <br><br>
    <div class="UAdd_form">
    <h1 class="text-center">Creation Utilisateur</h1>
    <br><br>
    {{form_start(creatForm)}}
    <br><br>

    {{form_widget(creatForm.nom,{'attr':{'class': 'form form-control','placeholder': 'Nom'}})}}
    <br>
    {{form_widget(creatForm.prenom,{'attr':{'class': 'form form-control','placeholder': 'Prenom'}})}}
    <br>
    {{form_widget(creatForm.username,{'attr':{'class': 'form form-control','placeholder': 'Username'}})}}
    <br>
    {{form_widget(creatForm.plainPassword,{'attr':{'class': 'form form-control','placeholder': 'Mot de passe'}})}}
